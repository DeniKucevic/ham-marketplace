{
  "version": 1,
  "rootDirectory": ".",
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": "apps/web/.next"
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/apps/web/$1" }
  ],
  "installCommand": "pnpm install",
  "buildCommand": "pnpm --filter @ham-marketplace/shared build && pnpm --filter apps/web build"
}
